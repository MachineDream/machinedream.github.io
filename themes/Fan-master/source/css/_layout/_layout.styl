// 背景canvas
#universe
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background: radial-gradient(1600px at 70% 120%, rgba(33, 39, 80, 1) 10%, #020409 100%);
  z-index -1

//#body
//  display flex
//  flex-direction row
//  height 100%
#main-container
  //flex 1 1 auto
  height 100%

// 内容
#content-outer
  height calc(100% - 98px)
  overflow auto
  #content-inner
    margin 32px auto
    width 900px

// 页脚
#bottom-outer
  #bottom-inner
    color $color-font

// 返回顶部
#return-top
  opacity 0
  position fixed
  bottom 72px
  right 32px
  width 40px
  height 40px
  line-height 40px
  text-align center
  font-size 16px
  color $color-font
  cursor pointer
  z-index 9