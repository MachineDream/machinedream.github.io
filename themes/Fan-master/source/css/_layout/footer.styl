// 底部
#footer
  padding 0 16px
  display flex
  flex-direction row
  //justify-content right
  justify-content space-between
  width calc(100% - 32px)
  height 40px
  line-height 40px
  border-top 1px solid rgba(173, 181, 189, 0.4)
  font-size 12px
  color $color-font
  #side-button
    margin-top 4px
    width 32px
    height 32px
    cursor pointer
    line-height 32px
    text-align center
    transition $transition-delay
    &.close
      transition $transition-delay
      transform rotate(180deg)
  .right-content
    display flex
    flex-direction row
    .busuanzi
      margin-right 16px
      #busuanzi_container_site_uv, #busuanzi_container_site_pv
        margin-right 8px
      .footer-separator
        margin 0 8px
    .copyright
      font-size 12px