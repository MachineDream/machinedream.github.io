#sidebar
  display none
  position fixed
  left -3rem
  width 3rem
  height 100%
  overflow hidden
  background $rgba-color
  .toggle-sidebar-info
    margin .16rem auto 0
    width 1rem
    height .32rem
    line-height .32rem
    font-size .14rem
    text-align center
    span
      display block
      width 1rem
      height .32rem
  .sidebar-toc
    position absolute
    left 0
    top .48rem
    padding 0 .16rem
    width 2.68rem
    height calc(100% - .48rem)
    .sidebar-toc-title
      margin-top .24rem
      font-size .2rem
      text-align center
      color $color-white
    .sidebar-toc-progress
      margin-top .24rem
      font-size .16rem
      .progress-notice
        margin-right .08rem
      .progress-num
        margin-right .08rem
        font-weight 600
        color $color-theme
      .progress-percentage
        font-size .16rem
      .sidebar-toc-progress-bar
        margin-top .08rem
        height .01rem
        width 0
        background $color-theme
    .sidebar-toc-content
      margin-top .24rem
      height calc(100% - 1.4rem)
      .toc
        font-size .14rem
        .toc-item
          line-height .28rem
          .toc-link
            transition $transition-delay
            &:hover
              color $color-theme
              transition $transition-delay
            &.active
              color $color-theme
        .toc-child
          padding-left .12rem
          display none
  .author-info
    display flex
    flex-direction column
    align-items center
    width 3rem
    &.hide
      display none
      opacity 0
      position absolute
      left .8rem
      top .48rem
    .author-info-avatar
      margin-top .16rem
      border-radius 50%
      overflow hidden
      .author-info-avatar-img
        padding .02rem
        width 1.2rem
        height 1.2rem
        border-radius 50%
        border .02rem solid $rgba-color
        &:hover
          animation avatar 5s linear infinite
    .author-info-name
      margin-top .16rem
      color $color-white
    .author-info-description
      margin-top .24rem
      font-size .14rem
    .links-buttons
      margin-top .24rem
      padding 0 .16rem
      display flex
      flex-direction row
      flex-wrap wrap
      justify-content center
      .links-button
        position relative
        margin-top .12rem
        margin-right .12rem
        padding .08rem .16rem .08rem .22rem
        font-size .14rem
        background $rgba-color
        .icon-dot
          display block
          position absolute
          left .1rem
          top .12rem
          width .06rem
          height .06rem
          border-radius 50%
  .author-info-articles
    display flex
    flex-direction row
    margin-top .32rem
    font-size .14rem
    .article-meta
      display flex
      flex-direction column
      align-items center
      width .72rem
      transition $transition-delay
      .pull-top
        margin-top .08rem
      .pull-bottom
        margin .08rem 0
      &:hover
        color $color-theme
        transition $transition-delay
      &.author-info-articles-archives, &.author-info-articles-tags
        position relative
        &:after
          content ''
          position absolute
          right 0
          top 50%
          transform translate3d(0, -50%, 0)
          display block
          width .01rem
          height .32rem
          background $rgba-color
      &.author-info-articles-tags
      &.author-info-articles-categories
        font-size .14rem

@keyframes avatar {
  25% {
    transform rotateZ(30deg)
  }
  75% {
    transform rotateZ(-30deg)
  }
}